
@{
    ViewData["Title"] = "GetInvoice";
}

@model GetInvoiceVM


<div class="col-lg-12">

    <div class="card mt-3">
        <div class="card-header">
            Fatura <strong>@ViewBag.date</strong>
        </div>
        <div class="card-body">
            <div class="row mb-5">
                <div class="mt-4 col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <h6>Kimden:</h6>
                    <div> <strong>@Model.Apartment</strong> </div>

                </div>
                <div class="mt-4 col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <h6>Kime:</h6>
                    <div> <strong>Yöneticiye</strong> </div>
                </div>
            </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th>Item</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="center">1</td>
                                <td class="left strong">Aylık Fatura</td>
                                <td class="left">₺@Model.Price</td>

                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-sm-5"> </div>
                    <div class="col-lg-4 col-sm-5 ml-auto">
                        <table class="table table-clear">
                            <tbody>
                                <tr>
                                    <td class="left"><strong>Total</strong></td>
                                    <td class="right">
                                        <strong>₺@Model.Price</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="left"><strong></strong></td>
                                    <td class="right text-right">
                                    <a asp-action="Payment" asp-controller="Home" asp-route-invoiceId="@Model.Id" asp-route-invoicePrice="@Model.Price.ToString()" class="btn btn-primary" valu>Ödeme Sayfası</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

        </div>
    </div>
</div>
