@{
    ViewData["Title"] = "SendMessage";
}

@model CreateMessageVM


<div class="col-lg-12">
    <div class="card p-5">
        <div class="card-header">
            <h3>Yöneticiye Mesaj Gönder</h3>
        </div>
        <div class="card-body">
            <div class="email-box ml-0 ml-sm-4 ml-sm-0 ">
                <form asp-controller="Messages" asp-action="SendMessage" method="post">
                    <div class="compose-content">
                        <div class="form-group">
                            <input type="text" class="form-control bg-transparent" placeholder=" Konu:">
                        </div>
                        <div class="form-group">
                            <textarea asp-for="@Model.Body" id="email-compose-editor" class="textarea_editor form-control bg-transparent" rows="15" placeholder="Mesaj Gir ..."></textarea>
                        </div>


                    </div>
                    <div class="text-left mt-4 mb-5">
                        <button class="btn btn-primary btn-sl-sm mr-3" type="submit"><span class="mr-2"><i class="fa fa-paper-plane"></i></span> Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

