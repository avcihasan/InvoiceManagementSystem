
@{
    ViewData["Title"] = "CreateInvoice";
}

<div class="col-lg-12">

    <div class="card mt-3">
        <div class="card-header">
            Fatura <strong>@ViewBag.date</strong>
        </div>
        <div class="card-body">
            <div class="row mb-5">
                <div class="mt-4 col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <h6>Kimden:</h6>
                    <div> <strong>Site Yönetimi</strong> </div>
                   
                </div>
                <div class="mt-4 col-xl-3 col-lg-3 col-md-6 col-sm-12">
                    <h6>Kime:</h6>
                    <div> <strong>Site Sakinlerine</strong> </div>
                </div>
            </div>

            <form asp-action="CreateInvoice" asp-area="Admin" asp-controller="Admin" method="post">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th>Item</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="center">1</td>
                                <td class="left strong">Aylık Fatura</td>
                                <td class="left">@ViewBag.month Faturası</td>
                            
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-sm-5"> </div>
                    <div class="col-lg-4 col-sm-5 ml-auto">
                        <table class="table table-clear">
                            <tbody>
                                <tr>
                                    <td class="left"><strong>Total</strong></td>
                                    <td class="right">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">₺</span>
                                            </div>
                                            <input name="invoicePrice" type="number" class="form-control">
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>

                                    <td class="left"><strong></strong></td>
                                    <td class="right text-right">
                                        <input type="submit" class="btn btn-primary" value="Fatura Oluştur">
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</div>

